
<% include ../partials/header %>
<div class="container">
    <div class="row ">
        <div class="col-md-3">
            <p>Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item">İtem1</li>
                <li class="list-group-item active">İtem1</li>
                <li class="list-group-item">İtem1</li>
            </div>
            
        </div>
        <div class="col-md-9">
            <div class="thumbnail ">
               <img src="<%=campground.image %>" class="img-responsive"> 
               <div class="caption-full">
                   <h4 class="pull-right">Price:<%= campground.price%>$/PerNight</h4>
                   <h3><a href="#"><%=campground.name %></a></h3>
                   
                   <p><%= campground.description %></p> 
                   <p><strong>Posted By</strong> <i><%=campground.author.username%> </i><span>  , <%=  moment(campground.createdTime).fromNow()%></span></p>
                   <p  style="display:inline;"class="pull-left"></p>
                   
                   
                    <div class="text-left">
                    <%if(currentUser&&campground.author.id.equals(currentUser._id)){%>
                        <a href="/campgrounds/<%=campground._id%>/edit" class=" btn btn-warning">Edit Campground <i class="fas fa-edit"></i></a> 
                        <form id="delete" action="/campgrounds/<%=campground._id%>/?_method=DELETE"  method="POST">
                            <button class="btn btn btn-danger"><i class="fas fa-trash-alt"></i></button>
                        </form>
                    <% } %> 
                    
                </div>
                
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a href="/campgrounds/<%=campground._id %>/comments/new" class=" btn btn-success">Leave a Review<i class="fas fa-comments"></i></a> 
                </div>
                 <% campground.comments.forEach((comment)=>{ %>
                <div class="row">
                   <div class="col-md-12">
                        <strong><%=comment.author.username%></strong>
                           <span class="pull-right"><%=moment(comment.createdTime).fromNow() %></span>
                    </div>
                </div>
                <p>
                    <%=comment.text%>  
                </p>
                <% if(currentUser&&comment.author.id.equals(currentUser._id)){%>
                <a class="btn btn-warning" href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit"><i class="fas fa-edit"></i></a>
                <form id="commentDelete"
                action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/?_method=DELETE" 
                method="POST">
                  <button class="btn btn-danger"><i class="fas fa-trash-alt"></i></button>  
                </form>
                <% } %>
                
                <% }) %> 
            </div> 
            
                    
                    
            
          
            
        </div>
    </div>
    
</div>

<% include ../partials/footer %>