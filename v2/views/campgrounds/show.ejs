
<% include ../partials/header %>
<div class="container">
    <div class="row ">
        <div class="col-md-3">
            <p>Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item">İtem1</li>
                <li class="list-group-item active">İtem1</li>
                <li class="list-group-item">İtem1</li>
            </div>
            
        </div>
        <div class="col-md-9">
            <div class="thumbnail ">
               <img src="<%= campground.image %>" class="img-responsive"> 
               <div class="caption-full">
                   <h4 class="pull-right">Price:9$</h4>
                   <h1><a href="#"><%=campground.name %></a></h1>
                   <p><%= campground.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a href="/campgrounds/<%= campground._id %>/comments/new" class=" btn btn-success">Leave a Review</a> 
                </div>
                 <%campground.comments.forEach((comment)=>{ %>
                <div class="row">
                   <div class="col-md-12">
                        <strong><%=comment.author.username%></strong>
                           <span class="pull-right">10 Days ago</span>
                    </div>
                </div>
                <p>
                    <%=comment.text%>  
                </p>
                <% }) %> 
            </div> 
            
                    
                    
            
          
            
        </div>
    </div>
    
</div>

<% include ../partials/footer %>