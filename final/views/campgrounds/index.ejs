<% include ../partials/header %>
 <div class="container">
     <header id="jumbotron" class="jumbotron">
         <div class="container text-center">
             <h1>Welcome To Campest!</h1>
             <p>View our hand-picked campgrounds from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground <i class="fas fa-campground"></i></a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-12">
                <div class="thumbnail">
                   <img id="indexpage_images" src="<%= campground.image %>">
                   <div class="caption">
                       <h4><%= campground.name %></h4>
                   </div>
                   <p>
                       <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"> <i class="fas fa-info"></i> Learn More</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
